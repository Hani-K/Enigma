case $1 in
powersuspend)
  P=/sys/kernel/power_suspend/power_suspend_mode
  if [ ! -z $2 ]; then
  if [ $2 == Autosleep_hook ]; then
    echo 0 > $P
  elif [ $2 == Userspace_trigger ]; then
    echo 1 > $P
  elif [ $2 == DisplayPanel_hook ]; then
    echo 2 > $P
  elif [ $2 == Hybrid_hook ]; then
    echo 3 > $P
  fi; fi
  copy=`cat $P`
  if [ $copy == 0 ]; then
    echo Autosleep_hook
  elif [ $copy == 1 ]; then
    echo Userspace_trigger
  elif [ $copy == 2 ]; then
    echo DisplayPanel_hook
  elif [ $copy == 3 ]; then
    echo Hybrid_hook
  fi
  ;;
esac
